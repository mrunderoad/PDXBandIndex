@{
  Layout = "_Layout";
}

@using PDXBandIndex.Models;
@model IEnumerable<PDXBandIndex.Models.Band>

<h1 class="welcome">Welcome to the PDX Band Index!</h1>
<p>View shows from local bands. Keep track of them by adding them to your favorites!</p>
<div class="row">
  <div class="col-md-3">
    <hr />
    <button class="options">@Html.ActionLink("ğŸ™ï¸Check out the BandsğŸ™ï¸", "Index", "Bands")</button>
    <hr /> 
    <button class="options">@Html.ActionLink("ğŸ¸See all GenresğŸ¸", "Index", "Genres")</button>
    <hr />
    <button class="options">@Html.ActionLink("ğŸ¥Check for ShowsğŸ¥", "Index", "Shows")</button>
    <hr />
    <button class="options">@Html.ActionLink("ğŸ”SearchğŸ”", "Search", "Home")</button>
    <hr />
  </div>
  <div class="col-md-6 middle">
    <h3 class="upcoming">Upcoming Shows</h3>
    <hr />
    <div class="row">
    @foreach (var shows in ViewBag.Shows) {
      <div class="card c1"><p>@Html.ActionLink($"{shows.Venue}", "Details", "Shows", new { id = shows.ShowId })</p>
      <p>@Html.ActionLink($"{shows.Date.Month}", "Details", "Shows")/@Html.ActionLink($"{shows.Date.Day}", "Details", "Shows")/@Html.ActionLink($"{shows.Date.Year}", "Details", "Shows")</p></div>
    }
    </div>
  </div>
  <div class="col-md-3">
    <h3 class="upcoming">Shows Today!</h3>
    <hr />
    <div class="today">
      @foreach (var shows in ViewBag.TodayShows)
      {
        <div class="card today-shows"><p>@Html.ActionLink($"{shows.Venue}", "Details", "Shows", new { id = shows.ShowId })</p>
        <p>@Html.ActionLink($"{shows.Date.Month}", "Details", "Shows")/@Html.ActionLink($"{shows.Date.Day}", "Details", "Shows")/@Html.ActionLink($"{shows.Date.Year}", "Details", "Shows")</p></div>
      }
    </div>
  </div>
</div>
<div class="card c2">
  <h3>Check these bands out!</h3>
  <div class="row">
    @foreach (var bands in ViewBag.Bands) {
      <div class="card c3">
        <p>@Html.ActionLink($"{bands.Name}", "Details", "Bands", new { id = bands.BandId })</p>
      </div>
    }
  </div>
</div>
