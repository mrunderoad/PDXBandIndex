@{
  Layout = "_Layout";
}

@using PDXBandIndex.Models;
@model IEnumerable<PDXBandIndex.Models.Band>

<h1 class="welcome">Welcome to the PDX Band Index!</h1>
<p>View shows from local bands. Keep track of them by adding them to your favorites!</p>
<div class="row">
  <div class="col-md-3">
    <hr />
    <button class="options">@Html.ActionLink("üéôÔ∏èCheck out the BandsüéôÔ∏è", "Index", "Bands")</button>
    <hr /> 
    <button class="options">@Html.ActionLink("üé∏See all Genresüé∏", "Index", "Genres")</button>
    <hr />
    <button class="options">@Html.ActionLink("ü•ÅCheck for Showsü•Å", "Index", "Shows")</button>
    <hr />
    <button class="options">@Html.ActionLink("üîçSearchüîç", "Search", "Home")</button>
    <hr />
  </div>
  <div class="col-md-6 middle">
    <h3 class="upcoming">Upcoming Shows</h3>
    <hr />
    <div class="row">
    @foreach (var shows in ViewBag.Shows) {
      <div class="card c1"><p>@Html.ActionLink($"{shows.Venue}", "Details", "Shows", new { id = shows.ShowId })</p>
      <p>@Html.ActionLink($"{shows.Date.Month}", "Details", "Shows")/@Html.ActionLink($"{shows.Date.Day}", "Details", "Shows")/@Html.ActionLink($"{shows.Date.Year}", "Details", "Shows")</p>
        @* @foreach (var bandOnShow in ViewBag.BandsOn)
        {
          <p><p>@Html.ActionLink($"{bandOnShow.Name}", "Details", "Bands", new { id = bandOnShow.BandId })</p></p>
        } *@
      </div>
    }
    </div>
  </div>
  <div class="col-md-3 onToday">
    <h3 class="upcoming">Shows Today!</h3>
    <hr />
    <div class="today">
      @foreach (var shows in ViewBag.TodayShows)
      {
        <div class="card today-shows"><p>@Html.ActionLink($"{shows.Venue}", "Details", "Shows", new { id = shows.ShowId })</p>
        <p>@Html.ActionLink($"{shows.Date.Month}", "Details", "Shows")/@Html.ActionLink($"{shows.Date.Day}", "Details", "Shows")/@Html.ActionLink($"{shows.Date.Year}", "Details", "Shows")</p></div>
      }
    </div>
  </div>
</div>
<div class="card c2">
  <h3>This Site Creators Bands!</h3>
  <div class="row myBands">
    @foreach (var bands in ViewBag.Bands) {
      <div class="c3">
        <p>@Html.ActionLink($"{bands.Name}", "Details", "Bands", new { id = bands.BandId }) & Cranefist!</p>
      </div>
      <div class="col-md-6 myBands">
        <iframe style="border-radius:12px" src="https://open.spotify.com/embed/album/5FtKVf1rasGlo4D7egBc6t?utm_source=generator" width="100%" height="380" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"></iframe>
      </div>
      <div class="col-md-6 myBands">
        <iframe style="border: 0; width: 100%; height: 380px;" src="https://bandcamp.com/EmbeddedPlayer/track=2732492770/size=large/bgcol=333333/linkcol=e32c14/minimal=true/transparent=true/" seamless><a href="https://cranefistband.bandcamp.com/track/parents">Parents by Cranefist</a></iframe>
      </div>
    }
