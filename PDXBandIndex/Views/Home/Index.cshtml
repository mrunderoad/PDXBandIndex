@{
  Layout = "_Layout";
}

@using PDXBandIndex.Models;
@model IEnumerable<PDXBandIndex.Models.Band>

<h1 class="welcome">Welcome to the PDX Band Index!</h1>
<p>View shows from local bands. Keep track of them by adding them to your favorites!</p>
<div class="row">
  <div class="col-md-3">
    <hr />
    <button class="options">@Html.ActionLink("🎙️Check out the Bands🎙️", "Index", "Bands")</button>
    <hr /> 
    <button class="options">@Html.ActionLink("🎸See all Genres🎸", "Index", "Genres")</button>
    <hr />
    <button class="options">@Html.ActionLink("🥁Check for Shows🥁", "Index", "Shows")</button>
    <hr />
    <button class="options">@Html.ActionLink("🔍Search🔍", "Search", "Home")</button>
    <hr />
  </div>
  <div class="col-md-6 middle">
    <h3 class="upcoming">Upcoming Shows</h3>
    <hr />
    <div class="row">
    @foreach (var shows in ViewBag.Shows) {
      <div class="card c1"><p>@Html.ActionLink($"{shows.Venue}", "Details", "Shows", new { id = shows.ShowId })</p>
      <p>@Html.ActionLink($"{shows.Date.Month}", "Details", "Shows")/@Html.ActionLink($"{shows.Date.Day}", "Details", "Shows")/@Html.ActionLink($"{shows.Date.Year}", "Details", "Shows")</p></div>
    }
    </div>
  </div>
  <div class="col-md-3">
    @if (User.Identity.IsAuthenticated)
    {
      <p>Hello @User.Identity.Name!</p>
      <hr />
      <p>Welcome to the PDX Band Index website. Made by Isaac Overstreet as the last independent project for the Epicodus Coding Bootcamp.</p>
      <hr />
      <p><em>Rock On!</em></p>
      
    }
    else
    {
      <p>@Html.ActionLink("Register", "Register", "Account")</p>
      <p>@Html.ActionLink("Log in", "Login", "Account")</p>
    }
  </div>
</div>
<div class="card c2">
  <h3>Check these bands out!</h3>
  <div class="row">
    @foreach (var bands in ViewBag.Bands) {
      <div class="card c3">
        <p>@Html.ActionLink($"{bands.Name}", "Details", "Bands", new { id = bands.BandId })</p>
      </div>
    }
  </div>
</div>
<br>
