@{
  Layout = "_Layout";
}

@model PDXBandIndex.Models.Band

<h4>Add a new band</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.Description)
    @Html.TextAreaFor(model => model.Description)
    <br>
    @Html.LabelFor(model => model.Members)
    @Html.TextAreaFor(model => model.Members)
    <br>
    <p>Link to your music!(Please input a link)</p>
    @Html.TextBoxFor(model => model.Music)
    <br>
    <input type="submit" value="Add new band" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all bands", "Index")</p>