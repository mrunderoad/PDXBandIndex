@{
  Layout = "_Layout";
}

@using PDXBandIndex.Models;
@model List<PDXBandIndex.Models.Show>;
@* @model PDXBandIndex.Models.Show; *@

<p><strong>See Today's Shows On The Home Page!</strong></p>
<div class="row">
  <div class="col-md-6">
    <h1>Upcoming Shows!</h1>
    <hr />
    @if (@Model.Count == 0)
    {
      <h3>No Shows have been added yet!</h3>
    } 
    <ul>
      @using (Html.BeginForm())
      {
      <div class="upcomingShows">
        @for(int i = 0; i < Model.Count; i++)
        {
          <li>@Html.ActionLink($"{Model[i].Venue}", "Details", new { id = Model[i].ShowId }) - @Html.ActionLink($"{Model[i].Date.Month}/{Model[i].Date.Day}/{Model[i].Date.Year}", "Details", new { id = Model[i].ShowId}) @Html.DisplayFor(Model => Model[i].ShowId)
          <br>
          @Html.DisplayFor(Model => Model[i].Time, new { htmlAttributes = new { type = "time" }})
          @Html.HiddenFor(Model => Model[i].ShowId)
          @Html.HiddenFor(Model => Model[i].Venue, new { htmlAttributes = new { @readonly = "readonly" } })
          @Html.HiddenFor(Model => Model[i].Info, new { htmlAttributes = new { @readonly = "readonly" } })
          @Html.HiddenFor(Model => Model[i].Date, new { htmlAttributes = new { @readonly = "readonly" } })
          @Html.HiddenFor(Model => Model[i].Time, new { htmlAttributes = new { @readonly = "readonly" }  })
          @Html.CheckBoxFor(Model => Model[i].Favorite, new { disabled = "disabled" })
          <hr />
          </li>
        }
      </div>
      @* <input type="submit" value="Favorite" /> *@
      }
      @* @using (Html.BeginForm())
      {
        @foreach (Show show in Model)
        {
          @Html.HiddenFor(model => model.ShowId)
          @Html.HiddenFor(model => model.Venue, new { htmlAttributes = new { @readonly = "readonly" } })
          @Html.HiddenFor(model => model.Info, new { htmlAttributes = new { @readonly = "readonly" } })
          @Html.HiddenFor(model => model.Date, new { htmlAttributes = new { @readonly = "readonly" } })
          @Html.HiddenFor(model => model.Time, new { type = "time", htmlAttributes = new { @readonly = "readonly" }  })
          <input type="checkbox" name="Favorite" value="true" checked>
        }
      } *@
    </ul>
  </div>
  <div class="col-md-6">
    <h1>Favorited Shows!</h1>
    <hr />
    <div class="row favs">
      @foreach (var shows in ViewBag.Shows)
      {
        <div class="card favCard">
        <li>@Html.ActionLink($"{shows.Venue}", "Details", new { id = shows.ShowId })</li>
        </div>
      }
    </div>
  </div>
</div>  

<p>@Html.ActionLink("Add new Show", "Create")</p>
