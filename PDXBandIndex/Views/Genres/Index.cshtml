@{
  Layout = "_Layout";
}

@using PDXBandIndex.Models;

<h1 class="allGenres">All Avaliable Genres!</h1>

@if (@Model.Count == 0)
{
  <h3>No genres have been added yet!</h3>
} 
<div class="row">
  <div class="col-md-6 col6">
    <div class="genres">
      @foreach(Genre genre in Model)
      {
        <p>@Html.ActionLink($"{genre.Name}", "Details", new { id = genre.GenreId })</p>
      }
    </div>
  </div>
  <div class="col-md-6 col6">
    <p>Don't see your favorite Genre? Contact us at isaacoverstreet3@gmail.com.</p>
  </div>
</div>


