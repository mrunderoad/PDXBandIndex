@{
  Layout = "_Layout";
}

@using PDXBandIndex.Models;

<h1>Genres</h1>

@if (@Model.Count == 0)
{
  <h3>No genres have been added yet!</h3>
} 

<ul>
  @foreach(Genre genre in Model)
  {
    <li>@Html.ActionLink($"{genre.Name}", "Details", new { id = genre.GenreId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Genre", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>